extends base

block page_title
	title Login

block content
	#login
		h3.text-center.text-white.pt-5 Login
		.container
			#login-row.row.justify-content-center.align-items-center
				#login-column.col-md-6
					#login-box.col-md-12
						form#login-form.form(action='/user/login', method='post')
							h3.text-center.text-info Login
							.form-group
								label.text-info(for='username') Username:
								br
								input#username.form-control(type='text', name='username')
							.form-group
								label.text-info(for='password') Password:
								br
								input#password.form-control(type='password', name='password')
							.form-group
								input.btn.btn-info.btn-md(type='submit', name='Login', value='submit')
