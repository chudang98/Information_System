extends base
block page_title
  title admin
block content
  .content-ttkh.content.container
    h2(style='border-bottom: 1px solid black;') Danh Sách Nhà Cung Cấp:
    form.content-form(action='/admin/timncctheosdt', method='post')
      .form-group.form-search-nv.row
        .col-md-10
          input.form-control(type='text', placeholder='Nhập vào sdt khách hàng  ',name="sdt")
        .col-md-2
          button.btn.btn-pri.btn-seller(type='submit') T&igrave;m ki&#x1EBF;m  
    table.table.table-bordered.table-striped.text-center
      thead.thead-table
        tr
          th(scope='col') STT
          th(scope='col') Họ và tên  
          th(scope='col') Số điện thoại 
          th(scope='col') Địa chỉ 
          th(scope='col') Chi Tiết 
      tbody
        - var dem = 1
        each ncc in nhacungcap
          if(dem<=15)
          tr
            th(scope='row')= dem++                     
            td=	ncc.nguoi.ten               
            td= ncc.nguoi.sdt           
            td=	ncc.nguoi.diaChi           
            td
              a.btn.btn-info(href=`/admin/xemchitietncc/${ncc._id}`) Xem	
